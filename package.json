{
  "name": "mpayroll",
  "version": "1.0.0",
  "description": "An open-source project to expose the benefits of software development combining BDD (Behavior-Driven Development) and TDD (Test-Driven Development).",
  "main": "src/mpayrollAPI.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "coverage": "NODE_ENV=test ./node_modules/.bin/istanbul cover  --include-all-sources ./node_modules/.bin/_mocha -- test/**/*.js",
    "feature-test": "node_modules/.bin/cucumber.js features/",
    "dev": "nodemon src/mpayrollAPI.js",
    "start": "node src/mpayrollAPI.js",
    "test": "NODE_ENV=test node_modules/.bin/_mocha --recursive test/unit/"
  },
  "bin": {
    "cucumber.js": "node_modules/.bin/cucumber.js",
    "cucumber-js": "node_modules/.bin/cucumber.js",
    "cucumberjs": "node_modules/.bin/cucumber.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bill-A/Correctness-DrivenDevelopment.git"
  },
  "keywords": [
    "BDD",
    "TDD",
    "jUnit",
    "mocha",
    "cucumber"
  ],
  "author": "Bill Allen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bill-A/Correctness-DrivenDevelopment/issues"
  },
  "homepage": "https://github.com/Bill-A/Correctness-DrivenDevelopment#readme",
  "dependencies": {
    "hapi": "^16.4.3",
    "mongoose": "^4.11.3",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "chakram": "^1.5.0",
    "cucumber": "^2.3.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2"
  }
}
